<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cihathazargmail.a4square.MainActivity">

    <EditText
        android:id="@+id/mekanCesidi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sehirBolge"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="@string/mekanCesidi"
        android:inputType="text" />

    <EditText
        android:id="@+id/sehirBolge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mekanCesidi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/sehirBolge"
        android:inputType="text" />

    <Button
        android:id="@+id/searchButton"
        style="@android:style/Animation.Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sehirBolge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onButtonClick"
        android:text="Search" />

</RelativeLayout>
